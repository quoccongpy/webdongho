@model IEnumerable<Category>
<partial name="_NoficationPartial">
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2> Category List</h2>
            </div>
            <div class="col-6">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus"></i>Create
                </a>
            </div>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th> Category Name</th>
                <th> Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <div>
                            <a class="btn btn-primary" asp-controller="Category" asp-action="Edit" asp-route-id=@item.Id><i class="bi bi-pencil"></i></a>
                            <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id=@item.Id><i class="bi bi-trash"></i></a>
                        </div>

                    </td>
                </tr>
            }

        </tbody>
    </table>
